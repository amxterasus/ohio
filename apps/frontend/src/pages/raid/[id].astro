---
import Layout from '@/layouts/Layout.astro';
import { RaidCard } from '@/components/cards/RaidCard';

export const prerender = false;

const { id } = Astro.params;
if (!id) throw new Error("Missing guild ID");
---

<Layout title={`Raid`}>
  <main
    class="max-h-[40rem] relative w-full flex md:items-center md:justify-center overflow-hidden px-8 md:min-h-[40rem] bg-gradient-to-tl from-background to-accent/30"
  >
    <div class="overflow-hidden md:px-10 -mb-32 mt-[-4.75rem] pb-32 pt-[4.75rem]">
      <div class="md:text-center lg:text-left">
        <div class="flex gap-x-4 mb-4 items-center">
          <span class="bg-foreground text-background px-0.5 text-sm">03.</span>
          <h1 class="text-lg">Raid</h1>
        </div>
         <div class="flex flex-row gap-4">
          <RaidCard guildId={id} client:load />
        </div>
      </div>
    </div>
</Layout>
